<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.ClockOut.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="TextAppearance.ClockOut.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.ClockOut.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.ClockOut.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="TextAppearance.ClockOut.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.ClockOut.Small" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>
    
    <!-- Link Text Style - FIXED: Added parent attribute -->
    <style name="TextAppearance.ClockOut.Link" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Button.ClockOut.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">@dimen/button_corner</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">2dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="Button.ClockOut.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">@dimen/button_corner</item>
        <item name="strokeColor">@color/accent</item>
        <item name="android:textColor">@color/accent</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <style name="Button.ClockOut.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/accent</item>
    </style>
    
    <!-- Input Field Styles -->
    <style name="TextInputLayout.ClockOut" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="errorTextColor">@color/error</item>
    </style>
    
    <style name="TextInputEditText.ClockOut" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">@dimen/input_padding</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Card.ClockOut" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="contentPadding">@dimen/spacing_lg</item>
    </style>
</resources>