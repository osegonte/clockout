<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Top Gradient Background -->
    <View
        android:id="@+id/topGradient"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="@drawable/gradient_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Today's Stats Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lg"
        android:layout_marginTop="@dimen/spacing_xl"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_lg"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Today's work hours"
                android:textSize="16sp"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/tvTodayHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Attendance Status Text -->
    <TextView
        android:id="@+id/tvAttendanceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to clock in"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="@dimen/spacing_xxl"
        app:layout_constraintTop_toBottomOf="@id/statsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Large Clock In/Out Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnClockInOut"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/info"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/spacing_xl"
        app:layout_constraintTop_toBottomOf="@id/tvAttendanceStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivClockIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_attendance"
                app:tint="@color/white"
                android:layout_marginBottom="@dimen/spacing_sm"/>

            <TextView
                android:id="@+id/tvClockAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clock In"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Current Time Display -->
    <TextView
        android:id="@+id/tvCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30 PM"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="@dimen/spacing_md"
        app:layout_constraintTop_toBottomOf="@id/btnClockInOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Action Buttons Row -->
    <LinearLayout
        android:id="@+id/actionButtonsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/spacing_lg"
        android:layout_marginTop="@dimen/spacing_xl"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- View History Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewHistory"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:text="View History"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            app:icon="@drawable/ic_attendance"
            app:iconTint="@color/primary"
            app:iconGravity="textStart"
            app:cornerRadius="28dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp"
            app:backgroundTint="@color/white"
            android:elevation="0dp"/>

        <!-- Select Site Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectSite"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_sm"
            android:text="Select Site"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/accent"
            app:icon="@drawable/ic_sites"
            app:iconTint="@color/accent"
            app:iconGravity="textStart"
            app:cornerRadius="28dp"
            app:strokeColor="@color/accent"
            app:strokeWidth="2dp"
            app:backgroundTint="@color/white"
            android:elevation="0dp"/>

    </LinearLayout>

    <!-- Bottom Info Cards -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/spacing_lg"
        android:layout_marginTop="@dimen/spacing_xl"
        android:layout_marginBottom="@dimen/spacing_lg"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/actionButtonsRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <!-- Selected Site Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_sm"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_sites"
                    app:tint="@color/warning"
                    android:layout_marginBottom="@dimen/spacing_xs"/>

                <TextView
                    android:id="@+id/tvSelectedSite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No site selected"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- GPS Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_sm"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivGpsIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_sites"
                    app:tint="@color/success"
                    android:layout_marginBottom="@dimen/spacing_xs"/>

                <TextView
                    android:id="@+id/tvGpsStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS Ready"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>