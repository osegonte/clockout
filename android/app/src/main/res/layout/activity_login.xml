<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl"
        android:gravity="center">

        <!-- Spacer for vertical centering -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Logo Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_xxl">

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ClockOut"
                style="@style/TextAppearance.ClockOut.Headline"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:letterSpacing="-0.02"
                android:layout_marginBottom="@dimen/spacing_sm"/>

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farm Attendance Tracking"
                style="@style/TextAppearance.ClockOut.Subtitle"
                android:textSize="@dimen/text_subtitle"
                android:textColor="@color/text_secondary"/>

        </LinearLayout>

        <!-- Login Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Card.ClockOut"
            app:cardElevation="8dp"
            app:cardCornerRadius="@dimen/card_corner"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Welcome Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back"
                    style="@style/TextAppearance.ClockOut.Title"
                    android:layout_marginBottom="@dimen/spacing_xs"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in to continue"
                    style="@style/TextAppearance.ClockOut.Caption"
                    android:layout_marginBottom="@dimen/spacing_lg"/>

                <!-- Email Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    style="@style/TextInputLayout.ClockOut"
                    android:layout_marginBottom="@dimen/spacing_md"
                    app:startIconDrawable="@android:drawable/ic_dialog_email"
                    app:startIconTint="@color/text_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextInputEditText.ClockOut"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    style="@style/TextInputLayout.ClockOut"
                    android:layout_marginBottom="@dimen/spacing_lg"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/text_hint"
                    app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                    app:startIconTint="@color/text_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextInputEditText.ClockOut"
                        android:inputType="textPassword"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Login Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="Sign In"
                    style="@style/Button.ClockOut.Primary"
                    android:elevation="2dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Registration Link -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_md">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                style="@style/TextAppearance.ClockOut.Body"
                android:textColor="@color/text_secondary"/>

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                style="@style/TextAppearance.ClockOut.Link"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/spacing_sm"/>

        </LinearLayout>

        <!-- Spacer for vertical centering -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS-verified attendance tracking"
            style="@style/TextAppearance.ClockOut.Small"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_md"/>

    </LinearLayout>

</ScrollView>