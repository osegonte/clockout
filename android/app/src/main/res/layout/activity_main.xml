<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ClockOut"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvSiteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading site..."
        android:textSize="18sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp"/>

    <!-- GPS Status Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPS Status"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvGpsStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Getting location..."
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance: --"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Worker Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Worker"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerWorker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:background="@android:drawable/btn_dropdown"/>

    <!-- Check In/Out Buttons -->
    <Button
        android:id="@+id/btnCheckIn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="CHECK IN"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnCheckOut"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="CHECK OUT"
        android:textSize="18sp"
        android:backgroundTint="#F44336"
        android:layout_marginBottom="24dp"/>

    <!-- Sync Status -->
    <TextView
        android:id="@+id/tvSyncStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âœ“ All synced"
        android:textSize="14sp"
        android:textColor="#4CAF50"
        android:gravity="center"
        android:layout_marginBottom="12dp"/>

    <!-- SYNC NOW BUTTON -->
    <Button
        android:id="@+id/btnSync"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ðŸ”„ SYNC NOW"
        android:textSize="16sp"
        android:backgroundTint="#2196F3"/>

</LinearLayout>