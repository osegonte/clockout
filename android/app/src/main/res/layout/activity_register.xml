<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_xl">

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ClockOut"
                style="@style/TextAppearance.ClockOut.Headline"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:letterSpacing="-0.02"
                android:layout_marginBottom="@dimen/spacing_xs"/>

            <!-- Create Account Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create your account"
                style="@style/TextAppearance.ClockOut.Subtitle"
                android:textColor="@color/text_secondary"/>

        </LinearLayout>

        <!-- Registration Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Card.ClockOut"
            app:cardElevation="6dp"
            app:cardCornerRadius="@dimen/card_corner"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Section: Organization Details -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organization Details"
                    style="@style/TextAppearance.ClockOut.Body"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="@dimen/spacing_md"/>

                <!-- Organization Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Farm/Organization Name"
                    style="@style/TextInputLayout.ClockOut"
                    android:layout_marginBottom="@dimen/spacing_md"
                    app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                    app:startIconTint="@color/text_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOrganizationName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextInputEditText.ClockOut"
                        android:inputType="textCapWords"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider"
                    android:layout_marginVertical="@dimen/spacing_md"/>

                <!-- Section: Admin Account -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Account"
                    style="@style/TextAppearance.ClockOut.Body"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="@dimen/spacing_md"/>

                <!-- Admin Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Full Name"
                    style="@style/TextInputLayout.ClockOut"
                    android:layout_marginBottom="@dimen/spacing_md"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                    app:startIconTint="@color/text_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAdminName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextInputEditText.ClockOut"
                        android:inputType="textPersonName"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                    style="@style/TextInputLayout.ClockOut"
                    android:layout_marginBottom="@dimen/spacing_md"
                    app:startIconDrawable="@android:drawable/ic_dialog_email"
                    app:startIconTint="@color/text_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextInputEditText.ClockOut"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password (min 6 characters)"
                    style="@style/TextInputLayout.ClockOut"
                    android:layout_marginBottom="@dimen/spacing_md"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/text_hint"
                    app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                    app:startIconTint="@color/text_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextInputEditText.ClockOut"
                        android:inputType="textPassword"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    style="@style/TextInputLayout.ClockOut"
                    android:layout_marginBottom="@dimen/spacing_lg"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/text_hint"
                    app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                    app:startIconTint="@color/text_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextInputEditText.ClockOut"
                        android:inputType="textPassword"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Register Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="Create Account"
                    style="@style/Button.ClockOut.Primary"
                    android:elevation="2dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Trial Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/input_corner"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/primary_light"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Trial Includes:"
                    style="@style/TextAppearance.ClockOut.Caption"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:layout_marginBottom="@dimen/spacing_sm"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 1 farm site location\n• Up to 10 workers\n• 2 manager accounts\n• GPS-verified attendance\n• No credit card required"
                    style="@style/TextAppearance.ClockOut.Caption"
                    android:textColor="@color/primary_dark"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Login Link -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_lg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                style="@style/TextAppearance.ClockOut.Body"
                android:textColor="@color/text_secondary"/>

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                style="@style/TextAppearance.ClockOut.Link"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/spacing_sm"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>